<%= render "shared/header" %>
<main class="main">
  <%# トップ画 %>
  <div class="top">
    <div class="card__wrapper">
      <div class="main_image">
        <%= image_tag "image6.jpg"  %>
      </div>
    </div>
  </div>
  <%# /トップ画 %>

  <%# 投稿一覧 %>
  <div class="post_wrap">
    <h2 class="title">
      釣果情報一覧
    </h2>
    <ul class='post-lists'>
      <% @posts.each do |post|%>
      <li class='list'>
        <%= link_to "#" do %>
          <div class='post-img-content'>
            <%= image_tag post.image, class: "item-img" if post.image.attached?%>
            <% unless post.image.present? %>
            <div class='temporary-img'>
              <span>No image</span>
            </div>
            <% end %>
          </div>
          
          <div class='post-info'>
            <h3 class='post-title'>
              <%= post.title %>
            </h3>
            <div class='result'>
              <span><%= "釣果：#{post.fishing_result}匹" %><br><%= "#{post.user.nickname}さん" %></span>
              <div class='star-btn'>
                <%= image_tag "star.png", class:"star-icon" %>
                <span class='star-count'>0</span>
              </div>
            </div>
          </div>
        <% end %>
      </li>
      <% end %>

      <% if @posts.length == 0  %>
        <li class='list'>
          <%= link_to '#' do %>
            <%= image_tag "image7.png", class: "item-img" %>
            <div class='item-info'>
              <h3 class='item-name'>
                投稿してね！
              </h3>
              <div class='item-price'>
                <span>99999999円<br>(税込み)</span>
                <div class='star-btn'>
                  <%= image_tag "star.png", class:"star-icon" %>
                  <span class='star-count'>0</span>
                </div>
              </div>
            </div>
          <% end %>
        </li>
      <% end %>
    </ul>
  </div>
  <%# /投稿一覧部分 %>

  <%# 桧原湖周辺情報 %>
  <div class="item_wrap">
    <h2 class="title">
      アイテム紹介
    </h2>
    <ul class='item-lists'>
    </ul>
  </div>
  <%# /投稿一覧部分 %>

  <%# 投稿一覧 %>
  <div class="faq_wrap">
    <h2 class="title">
      よくある質問
    </h2>
    <ul class='faq-lists'>
    </ul>
  </div>
  <%# /投稿一覧部分 %>

  <%# 投稿一覧 %>
  <div class="map_wrap">
    <h2 class="title">
      桧原湖マップ
    </h2>
    <div class="map">
    </div>
  </div>
  <%# /投稿一覧部分 %>


</main>
<%= render "shared/footer" %>