     
  <%= form_with model: @user, url: user_registration_path, class: 'registration-main', local: true do |f| %>
    <div class='form-wrap'>
      <%= render 'shared/error_messages', model: f.object %>

        <div class='form-header'>
          <h2 class='form-header-text'>
            ユーザー新規登録
          </h2>
        </div>

        <div class="form-group">
          <div class='form-text-wrap'>
            <label class="indispensable">必須</label>
            <span class="form-text">ニックネーム</span>
          </div>  
            <%= f.text_area :nickname , class:"input-default", id:"nickname", placeholder:"例) wakasagi太郎", maxlength:"40" %>
        </div>

        <div class="form-group">
          <div class='form-text-wrap'>
            <label class="indispensable">必須</label>
            <span class="form-text">メールアドレス</span>
          </div>
            <%= f.email_field :email, class:"input-default", id:"email", placeholder:"PC・携帯どちらでも可", autofocus: true %>
        </div>

        <div class="form-group">
          <div class='form-text-wrap'>
            <label class="indispensable">必須</label>
            <span class="form-text">パスワード(6文字以上)</span>
          </div>
            <%= f.password_field :password, class:"input-default", id:"password", placeholder:"6文字以上の半角英数字" %>
        </div>

        <div class="form-group">
          <div class='form-text-wrap'>
             <label class="indispensable">必須</label>
            <span class="form-text">パスワード再入力</span>
          </div>
          <%= f.password_field :password_confirmation, class:"input-default", id:"password-confirmation", placeholder:"同じパスワードを入力して下さい" %>
        </div>



        <div class="form-group">
          <div class='form-text-wrap'>
            <label class="indispensable">必須</label>
            <span class="form-text">腕前</span>
          </div>
            <label class = "redio_btn"><%= f.radio_button :skill, "ビギナー" %>ビギナー </label>
            <label class = "redio_btn"><%= f.radio_button :skill, "中級者" %>中級者 </label>
            <label class = "redio_btn"><%= f.radio_button :skill, "名人" %>名人</label>
        </div>

        <div class="post-btn-contents">
        <%= f.submit "登録する" ,class:"sell-btn" %>
        <%=link_to 'もどる', root_path, class:"back-btn" %>
        </div>
    </div>
  <% end %>
    


